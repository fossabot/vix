CONFIG_CXX xtensa-lx106-elf-g++
CONFIG_CXXFLAGS -Iinclude -O0 -nostdlib -mtext-section-literals -fno-pie -fno-stack-protector -ffreestanding -fno-exceptions -Wall -Wextra -Wno-pointer-arith -Wno-unused-parameter

CONFIG_LD xtensa-lx106-elf-ld
CONFIG_LDFLAGS -nostdlib -z noexecstack

CONFIG_OBJCOPYCMD xtensa-lx106-elf-objcopy -O binary kernel.o kernel.bin


CONFIG_ARCH lx106_esp8266
CONFIG_ENDIAN_BIG 0
CONFIG_LOGLEVEL 'I'
