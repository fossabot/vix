CXXFLAGS += -Iinclude/ -Iarch/$(BUILD_ARCH)/include -O$(CXX_OPTIM_LEVEL) -Wall -Wextra -Wno-unused-parameter

%.ocpp: %.cpp
	@echo "  CXX $<"
	@$(CXX) $(CXXFLAGS) -c $< -o $@

%.oS: %.S
	@echo "  AS $<"
	@$(CXX) $(CXXFLAGS) -c $< -o $@

ifeq ($(CONFIG_UBSAN), y)
CXXFLAGS += -fsanitize=undefined
endif
